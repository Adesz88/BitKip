{
  "manifest_version": 3,
  "version": "1.2",
  "name": "BitKip extension",
  "action": {
    "icon": "./resources/icons/logo.png",
    "default_title": "Click to toggle overlay"
  },

  "description": "Download grabber that works with BitKip application",
  "host_permissions": ["*://*/*"],
  "permissions": [
    "downloads",
    "webRequest",
    "tabs",
    "storage",
    "notifications",
    "contextMenus",
    "scripting"
  ],

  "background": {
    "scripts": ["./scripts/connector.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["./scripts/content.js"],
      "css": ["resources/overlay.css"]
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["./scripts/uSelect_overlay.js", "./scripts/uSelect_statemachine.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "bitkip_extension@beanvortex.com"
    }
  },

  "default_locale": "en",

  "icons": {
    "128": "./resources/icons/logo.png"
  }
}
