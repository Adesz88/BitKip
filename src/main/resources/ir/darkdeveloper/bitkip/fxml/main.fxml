<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox minHeight="512" prefHeight="512" minWidth="850" prefWidth="850.0" stylesheets="@../css/main.css"
      xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.darkdeveloper.bitkip.controllers.MainController">

    <HBox maxHeight="2" minHeight="2" styleClass="csm_toolbar"/>

    <HBox fx:id="toolbar" alignment="BASELINE_CENTER" maxHeight="32" minHeight="32" spacing="10"
          styleClass="csm_toolbar">
        <Label text="LOGO"/>
        <Button text="File" styleClass="toolbar_menu"/>
        <Button text="Edit" styleClass="toolbar_menu"/>
        <Button text="About" styleClass="toolbar_menu"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="hideBtn" onAction="#hideWindowApp"/>
        <Button fx:id="fullWindowBtn" onAction="#toggleFullWindowApp"/>
        <Button fx:id="closeBtn" onAction="#closeApp"/>
    </HBox>

    <HBox fx:id="mainBox">
        <VBox prefWidth="100" minWidth="100" styleClass="side">
        </VBox>
        <TableView minWidth="750" prefWidth="Infinity" fx:id="contentTable">
            <columns>
                <TableColumn text="name" fx:id="nameColumn"/>
                <TableColumn text="progress" fx:id="progressColumn"/>
                <TableColumn text="size" fx:id="sizeColumn"/>
                <TableColumn prefWidth="100" text="remaining time" fx:id="remainingColumn"/>
                <TableColumn text="chunks" fx:id="chunksColumn"/>
                <TableColumn prefWidth="125" text="add date " fx:id="addDateColumn"/>
                <TableColumn prefWidth="125" text="last try" fx:id="lastTryColumn"/>
                <TableColumn prefWidth="125" text="complete date" fx:id="completeColumn"/>
            </columns>
        </TableView>
    </HBox>
</VBox>
