<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.ToggleSwitch?>
<?import java.net.URL?>
<VBox minHeight="350" minWidth="600" prefHeight="350" prefWidth="600" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.darkdeveloper.bitkip.controllers.DownloadingController">
    <stylesheets>
        <URL value="@../css/main.css" />
        <URL value="@../css/newDownload.css" />
    </stylesheets>

    <HBox maxHeight="2" minHeight="2" styleClass="csm_toolbar" />

    <HBox minWidth="296" prefWidth="296" styleClass="csm_toolbar">
        <HBox maxWidth="2" minWidth="2" styleClass="csm_toolbar" />
        <HBox fx:id="toolbar" alignment="CENTER" maxHeight="32" minHeight="32" minWidth="296" prefWidth="296" spacing="10">
            <ImageView fx:id="logoImg" fitHeight="30" fitWidth="30" />
            <Label fx:id="titleLbl" styleClass="bold" text="Downloading..." />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="hideBtn" onAction="#hideWindowApp" />
            <Button fx:id="closeBtn" onAction="#closeStage" />
        </HBox>
        <HBox maxWidth="2" minWidth="2" styleClass="csm_toolbar" />
    </HBox>


    <VBox spacing="10" style="-fx-padding: 8">
        <Label fx:id="nameLbl" text="fileName" />
        <Label fx:id="queueLbl" text="queueName" />
        <Label fx:id="statusLbl" text="status" />
        <VBox spacing="5" style="-fx-padding: 10 0 10 0">
            <HBox>
                <Label fx:id="speedLbl" text="0 MB/s" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="downloadedOfLbl" text="0 MB / 0 MB" />
            </HBox>
            <ProgressBar fx:id="downloadProgress" prefWidth="Infinity" />
        </VBox>
        <Label fx:id="progressLbl" text="progress" />
        <Label fx:id="remainingLbl" text="remaining time" />
      <Accordion fx:id="accordion">
        <panes>
            <TitledPane animated="false" text="Advanced" fx:id="advancedPane">
                <VBox>
                    <ToggleSwitch text="Open after complete" fx:id="openSwitch"/>
                    <ToggleSwitch text="Show complete dialog" fx:id="showSwitch"/>
                </VBox>
            </TitledPane>
        </panes>
      </Accordion>



        <HBox alignment="BOTTOM_CENTER" spacing="20" style="-fx-padding: 10 0 5 0">
            <Button onAction="#onClose" styleClass="cancel_btn" text="Close" />
            <Button fx:id="controlBtn" onAction="#onControl" styleClass="add_btn" text="Pause" />
        </HBox>

    </VBox>
</VBox>
