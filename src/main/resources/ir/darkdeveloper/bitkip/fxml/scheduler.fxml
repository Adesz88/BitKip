<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<VBox minHeight="550" prefHeight="550" minWidth="600" prefWidth="600.0"
      maxHeight="600"
      xmlns="http://javafx.com/javafx/16"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="ir.darkdeveloper.bitkip.controllers.SchedulerController">
    <stylesheets>
        <URL value="@../css/main.css"/>
        <URL value="@../css/newDownload.css"/>
    </stylesheets>

    <HBox maxHeight="2" minHeight="2" styleClass="csm_toolbar"/>

    <HBox styleClass="csm_toolbar" minWidth="600" prefWidth="600">
        <HBox maxWidth="2" minWidth="2" styleClass="csm_toolbar"/>
        <HBox minWidth="596" prefWidth="596" fx:id="toolbar" alignment="CENTER" maxHeight="32" minHeight="32"
              spacing="10">
            <ImageView fx:id="logoImg" fitWidth="30" fitHeight="30"/>
            <Label fx:id="toolbarTitle" styleClass="bold"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="hideBtn" onAction="#hideStage"/>
            <Button fx:id="fullWindowBtn" onAction="#toggleStageSize"/>
            <Button fx:id="closeBtn" onAction="#closeStage"/>
        </HBox>
        <HBox maxWidth="2" minWidth="2" styleClass="csm_toolbar"/>
    </HBox>

    <HBox>
        <ListView prefHeight="550" minWidth="150" prefWidth="150" fx:id="queueList"/>
    </HBox>

</VBox>